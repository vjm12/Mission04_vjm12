@{
    ViewData["Title"] = "Grade Calculator";
}
@model GradeCalcModel;
<!--Import the model and use asp to attach model to each input. Also use the validation summary-->
<h2>Grade Calculator</h2>
<!--This is where you input the information for the javascript program-->
<p>Please enter your numeric grade (i.e. 92) </p>
<br />
<form method="post">

    <label>Assignments</label>
    <input id="assignments" asp-for="Assignments"/><br />
    <label>Group Projects</label>
    <input id="groupprojects" asp-for="GroupProjects"/><br />
    <label>Quizzes</label>
    <input id="quizzes" asp-for="Quizzes"/><br />
    <label>Midterm Exam</label>
    <input id="midterm" asp-for="Midterm"/><br />
    <label>Final Exam</label>
    <input id="final" asp-for="Final"/><br />
    <label>INTEX</label>
    <input id="intex" asp-for="INTEX"/><br /><br />
    <input id="btnsubmit" type="submit" value="Calculate" /><br /><br />

    <label id="lettergrade"></label>
    <div asp-validation-summary="All"></div>
</form>
<!--Source the bootstrap, jquery, and javascript program-->
<script src="~/js/GradeCalculator.js"></script>
